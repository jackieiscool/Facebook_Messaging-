<%= form_for @conversation do |f| %>

  <%= f.label :subject %>
  <%= f.text_field :subject %><br/>

  <%= f.fields_for :user_conversations do |builder| %>
    <%= builder.label :to %>
    <%= builder.text_field :friend_name %>
  <% end %><br/>

  <%= f.fields_for :messages do |builder| %>
    <%= builder.label :messages %>
    <%= builder.text_area :body %>
  <% end %>

<%= f.submit "Send" %>

<% end %>